{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "rootDir": "./",
        "lib": ["ES2015", "DOM"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
}
